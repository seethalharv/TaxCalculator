{
  "openapi": "3.0.1",
  "info": {
    "title": "TaxCalculator.App.Api",
    "version": "1.0"
  },
  "paths": {
    "/TaxCalculator/calculate": {
      "post": {
        "tags": [
          "TaxCalculator"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TaxInput"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TaxInput"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TaxInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TaxResult"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaxResult"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaxResult"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TaxInput": {
        "required": [
          "salary"
        ],
        "type": "object",
        "properties": {
          "salary": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "TaxResult": {
        "type": "object",
        "properties": {
          "grossAnnual": {
            "type": "number",
            "format": "double"
          },
          "grossMonthly": {
            "type": "number",
            "format": "double"
          },
          "netAnnual": {
            "type": "number",
            "format": "double"
          },
          "netMonthly": {
            "type": "number",
            "format": "double"
          },
          "annualTax": {
            "type": "number",
            "format": "double"
          },
          "monthlyTax": {
            "type": "number",
            "format": "double"
          },
          "taxYear": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}